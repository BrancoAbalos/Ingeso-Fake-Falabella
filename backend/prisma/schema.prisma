generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model StockCarrito {
  id String @id @default(cuid(1))
  producto String
  cantidad Int @default(0)
}

model Product {
  id          String  @id
  name        String
  price       Int
  image       String?
  title       String?
  description String?
  isFeatured  Boolean? @default(false)
  categoria   String?
}